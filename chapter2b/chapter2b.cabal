cabal-version:       3.0

name:                chapter2b
synopsis:            Project synopsis
version:             0.0.1.0
homepage:            https://github.com/your_github_username/chapter2b
license:             BSD-3-Clause
author:              Your Name
maintainer:          Your Name
copyright:           Your Name
category:            Package.Category
build-type:          Simple

library
  hs-source-dirs:      src
  default-language:    Haskell2010
  exposed-modules:     Chapter2b
  ghc-options:         -Wall -fno-warn-name-shadowing
  build-depends:       base >= 4.11 && < 5,
                       text,
                       fmt

executable chapter2b
  main-is:            Main.hs
  hs-source-dirs:     app
  default-language:   Haskell2010
  ghc-options:        -threaded -O2
  build-depends:      base
                    , chapter2b

test-suite chapter2b-tests
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Main.hs
  default-language: Haskell2010
  ghc-options:      -Wall -threaded
  build-depends:    base >=4.11 && < 5
                  , chapter2b
                  , hedgehog
